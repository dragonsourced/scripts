#!/bin/sh

FILE=~/docs/Anglish.tsv

from() {
    grep "^$*" $FILE
}

find() {
    grep "	$*" $FILE
    grep "; $*"  $FILE
}

to() {
    find "$*"
    find "a $*"
    find "an $*"
    find "to $*"
}

case $1 in
    t*) shift; to   "$*" ;;
    f*) shift; from "$*" ;;
    *)  echo "Usage: $0 to/from [WORD]" ;;
esac
